<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="comtelindo.sampleapp.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/myandalas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#f9f9f9"
        android:text="Easy, for your lifetime Benefits.."
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <EditText
        android:padding="10dp"
        android:hint="No Kartu Member"
        android:background="@drawable/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/card_number"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Password"
        android:padding="10dp"
        android:background="@drawable/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/card_number"
        android:layout_alignEnd="@+id/card_number"
        android:layout_alignStart="@+id/card_number" />

    <Button
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:background="@drawable/button"
        android:layout_below="@+id/password"
        android:layout_marginTop="52dp"
        android:layout_alignStart="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:id="@+id/login"
        android:onClick="onTxtClick" />

    <TextView
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Belum punya member? Daftar "
        android:id="@+id/textView2"
        android:textSize="12dp"
        android:layout_alignTop="@+id/sign_up"
        android:layout_toStartOf="@+id/sign_up" />

    <TextView
        android:textColor="#00deff"
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onTxtClick"
        android:text="di sini"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="26dp"  />

</RelativeLayout>